# Application Mode
DEMO_MODE=true
NODE_ENV=development

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/firefly_grove?schema=public"

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-generate-with-openssl-rand-base64-32

# Stripe (test mode)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Backblaze B2 (for backups and storage)
B2_APPLICATION_KEY_ID=your_key_id
B2_APPLICATION_KEY=your_key
B2_BUCKET_NAME=firefly-grove-storage
B2_BUCKET_ID=your_bucket_id

# Email (Resend)
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@fireflygrove.app
# For legacy compatibility
EMAIL_FROM=noreply@fireflygrove.com

# Feedback destination (where beta feedback emails go)
FEEDBACK_EMAIL=your-email@example.com

# Cron Jobs (for Vercel)
CRON_SECRET=your-cron-secret-generate-with-openssl-rand-hex-32
